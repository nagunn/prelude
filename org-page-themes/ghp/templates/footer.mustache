{{#show-meta-info}}
<aside id="meta">
  <span title="post date" class="post-info">{{{creation-date}}}</span>
  <span title="last modification date" class="post-info">{{modification-date}}</span>
  <span title="tags" class="post-info">{{{tags}}}</span>
  <span title="author" class="post-info">{{author}}</span>
</aside>
{{/show-meta-info}}

<footer id="footer">
    Send comments, critique and suggestions to <a href="mailto:{{email}}">{{author}}</a>.
    Powered by <a href="https://github.com/kelvinh/org-page">org-page</a>
    <p>
        <form method="get" id="searchform" action="http://www.google.com/search">
          <input type="text" class="field" name="q" id="s" placeholder="Search">
          <input type="hidden" name="as_sitesearch" value="{{site-domain}}">
        </form>
    </p>
</footer>
